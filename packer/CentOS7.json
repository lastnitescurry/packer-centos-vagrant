{
  "builders": 
  [
    {
      "name": "CentOS-7-x86_64",
      "type": "virtualbox-iso",
      "boot_command": 
      [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 204800,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": 
      [
        "file:///D:/Software/Centos/CentOS-7-x86_64-Minimal-1810.iso",
        "http://ftp.heanet.ie/pub/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
        "http://mirror.strencom.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p",
      "shutdown_timeout": "5m",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-7-x86_64",
      "vboxmanage": 
      [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": 
  [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/ansible.sh",
        "scripts/oracle12c.sh",        
        "scripts/documentum.sh",
        "scripts/cleanup.sh",
        "scripts/info.sh",
        "scripts/zerodisk.sh"
      ]
    },
    {
      "type": "file",
      "source": "./files/time_prompt.sh",
      "destination": "/etc/profile.d/time_prompt.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/configureTimePrompt.sh"
      ]
    }
  ],
  "post-processors": 
  [
    {
      "output": "builds/{{.Provider}}-centos7.box",
      "type": "vagrant"
    }
  ]
}
