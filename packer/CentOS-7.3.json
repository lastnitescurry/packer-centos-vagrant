{
  "builders": [
    {
      "name": "CentOS-7.3-x86_64",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 204800,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http73",
      "iso_urls": [
        "CentOS-7-x86_64-Minimal-1611.iso",
        "http://ftp.wrz.de/pub/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "128"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts73/base.sh",
        "scripts73/puppet.sh",
        "scripts73/vagrant.sh",
        "scripts73/virtualbox.sh",
        "scripts73/cleanup.sh",
        "scripts73/info.sh",
        "scripts73/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-centos7.box",
      "type": "vagrant"
    }
  ]
}
