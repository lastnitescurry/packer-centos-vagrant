{
  "builders": [
    {
      "name": "CentOS-7-x86_64",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 204800,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http7",
      "iso_urls": [
        "file:///D:/Software/Centos/CentOS-7-x86_64-Minimal-1804.iso",
        "http://ftp.heanet.ie/pub/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso",
        "http://mirror.strencom.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p",
      "guest_additions_path": "file:///C:/Program\\Files/Oracle/VirtualBox/VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "128"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts73/base.sh",
        "scripts73/vagrant.sh",
        "scripts73/virtualbox.sh",
        "scripts73/cleanup.sh",
        "scripts73/info.sh",
        "scripts73/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-centos7.box",
      "type": "vagrant"
    }
  ]
}
